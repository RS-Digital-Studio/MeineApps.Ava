<Project>
  <PropertyGroup>
    <!-- .NET Version - Default for libraries -->
    <TargetFramework Condition="'$(TargetFramework)' == ''">net10.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Code Quality -->
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningLevel>5</WarningLevel>
    <!-- SixLabors.ImageSharp 1.0.4 CVEs: Transitive Abhaengigkeit von PdfSharpCore,
         nur fuer PDF-Generierung genutzt, keine Verarbeitung von User-Bildern -->
    <NoWarn>$(NoWarn);NU1902;NU1903</NoWarn>

    <!-- Assembly Info -->
    <Company>RS Digital</Company>
    <Copyright>Copyright Â© 2026 RS Digital</Copyright>
    <Authors>Robert</Authors>

    <!-- Avalonia -->
    <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
  </PropertyGroup>

  <!-- Android-specific settings are in Directory.Build.targets (evaluated AFTER project files) -->
</Project>
