<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:BomberBlast"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             x:Class="BomberBlast.App">

  <Application.Resources>
    <!-- Gold-Akzentfarbe für Coins, Sterne, Belohnungen -->
    <SolidColorBrush x:Key="GoldAccentBrush" Color="#FFD700" />
    <Color x:Key="GoldAccentColor">#FFD700</Color>
  </Application.Resources>

  <Application.Styles>
    <!-- Avalonia Fluent Theme as base -->
    <FluentTheme />

    <!-- Material Icons -->
    <materialIcons:MaterialIconStyles />

    <!-- Core Theme Colors (design tokens shared across all themes) -->
    <StyleInclude Source="avares://MeineApps.Core.Ava/Themes/ThemeColors.axaml" />

    <!-- UI Styles -->
    <StyleInclude Source="avares://MeineApps.UI/Styles/ButtonStyles.axaml" />
    <StyleInclude Source="avares://MeineApps.UI/Styles/TextStyles.axaml" />
    <StyleInclude Source="avares://MeineApps.UI/Styles/InputStyles.axaml" />
    <StyleInclude Source="avares://MeineApps.UI/Controls/Card.axaml" />
    <StyleInclude Source="avares://MeineApps.UI/Controls/FloatingActionButton.axaml" />
    <StyleInclude Source="avares://MeineApps.UI/Styles/ModernCardStyles.axaml" />

    <!-- BomberBlast GameButton: Komplett transparenter Hintergrund + Scale-Transition -->
    <Style Selector="Button.GameButton">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="BorderBrush" Value="Transparent" />
      <Setter Property="RenderTransformOrigin" Value="50%,50%" />
      <Setter Property="RenderTransform" Value="scale(1)" />
      <Setter Property="Transitions">
        <Transitions>
          <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" Easing="CubicEaseOut" />
        </Transitions>
      </Setter>
    </Style>
    <!-- Fluent-Theme ContentPresenter überschreiben (hat eigenen Background) -->
    <Style Selector="Button.GameButton /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderBrush" Value="Transparent" />
      <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style Selector="Button.GameButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button.GameButton:pressed /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button.GameButton:pointerover">
      <Setter Property="RenderTransform" Value="scale(1.05)" />
    </Style>
    <Style Selector="Button.GameButton:pressed">
      <Setter Property="RenderTransform" Value="scale(0.95)" />
    </Style>
  </Application.Styles>

</Application>
