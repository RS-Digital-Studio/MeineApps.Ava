<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BomberBlast.ViewModels"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:skia="using:Avalonia.Labs.Controls"
             xmlns:controls="using:BomberBlast.Controls"
             x:Class="BomberBlast.Views.HelpView"
             x:DataType="vm:HelpViewModel">

  <!-- Animierter Menü-Hintergrund -->
  <Panel AutomationProperties.AutomationId="Help_Root">
    <controls:MenuBackgroundCanvas />

    <Grid RowDefinitions="Auto,*">

      <!-- Header -->
      <Border Grid.Row="0"
              Classes="CardElevated"
              Padding="16,12"
              CornerRadius="0,0,12,12">
        <Grid ColumnDefinitions="Auto,*,Auto">
          <!-- Back Button -->
          <Button Classes="Text"
                  AutomationProperties.AutomationId="Help_BtnBack"
                  Command="{Binding GoBackCommand}">
            <mi:MaterialIcon Kind="ArrowLeft" Width="24" Height="24" />
          </Button>

          <!-- Title -->
          <StackPanel Grid.Column="1"
                      Orientation="Horizontal"
                      HorizontalAlignment="Center"
                      Spacing="8">
            <mi:MaterialIcon Kind="HelpCircleOutline" Width="24" Height="24"
                             Foreground="{DynamicResource TextPrimaryBrush}" />
            <TextBlock AutomationProperties.AutomationId="Help_TxtTitle"
                       Text="{loc:Translate Help}"
                       FontSize="20" FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
          </StackPanel>

          <!-- Spacer -->
          <Border Grid.Column="2" Width="44" />
        </Grid>
      </Border>

      <!-- Content -->
      <ScrollViewer Grid.Row="1"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" Margin="12,12,12,80">

          <!-- How to Play + Controls: Side by Side -->
          <Grid ColumnDefinitions="*,*">

            <!-- How to Play - Blauer Akzent -->
            <Border Grid.Column="0" Classes="Card StatsCard" Margin="0,0,6,0"
                    BorderThickness="3,0,0,0" BorderBrush="#2196F3"
                    BoxShadow="0 2 8 0 #25000000"
                    AutomationProperties.AutomationId="Help_HowToPlaySection">
              <StackPanel Spacing="8">
                <Border CornerRadius="6" Padding="8,6" Margin="0,0,0,4">
                  <Border.Background>
                    <SolidColorBrush Color="#2196F3" Opacity="0.1" />
                  </Border.Background>
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <mi:MaterialIcon Kind="GamepadVariantOutline" Width="22" Height="22"
                                     Foreground="#2196F3" />
                    <TextBlock AutomationProperties.AutomationId="Help_TxtHowToPlayTitle"
                               Text="{loc:Translate HowToPlay}"
                               FontSize="17" FontWeight="Bold"
                               Foreground="#2196F3" />
                  </StackPanel>
                </Border>
                <TextBlock AutomationProperties.AutomationId="Help_TxtHowToPlayDesc"
                           Text="{loc:Translate HowToPlayDesc}"
                           FontSize="13" TextWrapping="Wrap"
                           Foreground="{DynamicResource TextSecondaryBrush}" />
              </StackPanel>
            </Border>

            <!-- Controls - Grüner Akzent -->
            <Border Grid.Column="1" Classes="Card StatsCard" Margin="6,0,0,0"
                    BorderThickness="3,0,0,0" BorderBrush="#4CAF50"
                    BoxShadow="0 2 8 0 #25000000"
                    AutomationProperties.AutomationId="Help_ControlsSection">
              <StackPanel Spacing="8">
                <Border CornerRadius="6" Padding="8,6" Margin="0,0,0,4">
                  <Border.Background>
                    <SolidColorBrush Color="#4CAF50" Opacity="0.1" />
                  </Border.Background>
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <mi:MaterialIcon Kind="Gamepad" Width="22" Height="22"
                                     Foreground="#4CAF50" />
                    <TextBlock AutomationProperties.AutomationId="Help_TxtControlsTitle"
                               Text="{loc:Translate ControlsHelp}"
                               FontSize="17" FontWeight="Bold"
                               Foreground="#4CAF50" />
                  </StackPanel>
                </Border>
                <TextBlock AutomationProperties.AutomationId="Help_TxtControlsDesc"
                           Text="{loc:Translate ControlsHelpDesc}"
                           FontSize="13" TextWrapping="Wrap"
                           Foreground="{DynamicResource TextSecondaryBrush}" />
              </StackPanel>
            </Border>

          </Grid>

          <!-- Styled Separator -->
          <Border Height="2" CornerRadius="1" Margin="20,4">
            <Border.Background>
              <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="Transparent" Offset="0" />
                <GradientStop Color="#40FFD700" Offset="0.5" />
                <GradientStop Color="Transparent" Offset="1" />
              </LinearGradientBrush>
            </Border.Background>
          </Border>

          <!-- Power-Ups - Goldener Akzent -->
          <Border Classes="Card StatsCard"
                  BorderThickness="3,0,0,0" BorderBrush="#FFD700"
                  BoxShadow="0 2 8 0 #25000000"
                  AutomationProperties.AutomationId="Help_PowerUpsSection">
            <StackPanel Spacing="8">
              <Border CornerRadius="6" Padding="8,6" Margin="0,0,0,4">
                <Border.Background>
                  <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                    <GradientStop Color="#20FFD700" Offset="0" />
                    <GradientStop Color="Transparent" Offset="0.7" />
                  </LinearGradientBrush>
                </Border.Background>
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <mi:MaterialIcon Kind="StarCircleOutline" Width="22" Height="22"
                                   Foreground="#FFD700" />
                  <TextBlock AutomationProperties.AutomationId="Help_TxtPowerUpsTitle"
                             Text="{loc:Translate PowerUps}"
                             FontSize="17" FontWeight="Bold"
                             Foreground="#FFD700" />
                </StackPanel>
              </Border>

              <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Bomb Up -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuBombUp" AutomationProperties.AutomationId="Help_PuBombUp" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate PowerUp_BombUp}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_BombUp_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Fire -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuFire" AutomationProperties.AutomationId="Help_PuFire" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate PowerUp_Fire}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Fire_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Speed -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuSpeed" AutomationProperties.AutomationId="Help_PuSpeed" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate PowerUp_Speed}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Speed_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Wall Pass -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuWallpass" AutomationProperties.AutomationId="Help_PuWallpass" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate PowerUp_Wallpass}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Wallpass_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Detonator -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuDetonator" AutomationProperties.AutomationId="Help_PuDetonator" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate PowerUp_Detonator}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Detonator_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Bomb Pass -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuBombpass" AutomationProperties.AutomationId="Help_PuBombpass" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate PowerUp_Bombpass}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Bombpass_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Flame Pass -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuFlamepass" AutomationProperties.AutomationId="Help_PuFlamepass" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate PowerUp_Flamepass}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Flamepass_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Mystery -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuMystery" AutomationProperties.AutomationId="Help_PuMystery" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate PowerUp_Mystery}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Mystery_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Kick -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuKick" AutomationProperties.AutomationId="Help_PuKick" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate PowerUp_Kick}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Kick_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Line Bomb -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuLineBomb" AutomationProperties.AutomationId="Help_PuLineBomb" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate PowerUp_LineBomb}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_LineBomb_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Power Bomb -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuPowerBomb" AutomationProperties.AutomationId="Help_PuPowerBomb" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate PowerUp_PowerBomb}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource AccentBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_PowerBomb_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Skull -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="PuSkull" AutomationProperties.AutomationId="Help_PuSkull" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate PowerUp_Skull}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource ErrorBrush}" />
                      <TextBlock Text="{loc:Translate PowerUp_Skull_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
              </WrapPanel>
            </StackPanel>
          </Border>

          <!-- Styled Separator -->
          <Border Height="2" CornerRadius="1" Margin="20,4">
            <Border.Background>
              <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="Transparent" Offset="0" />
                <GradientStop Color="#40F44336" Offset="0.5" />
                <GradientStop Color="Transparent" Offset="1" />
              </LinearGradientBrush>
            </Border.Background>
          </Border>

          <!-- Enemies - Roter Akzent -->
          <Border Classes="Card StatsCard"
                  BorderThickness="3,0,0,0" BorderBrush="#F44336"
                  BoxShadow="0 2 8 0 #25000000"
                  AutomationProperties.AutomationId="Help_EnemiesSection">
            <StackPanel Spacing="8">
              <Border CornerRadius="6" Padding="8,6" Margin="0,0,0,4">
                <Border.Background>
                  <SolidColorBrush Color="#F44336" Opacity="0.1" />
                </Border.Background>
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <mi:MaterialIcon Kind="Ghost" Width="22" Height="22"
                                   Foreground="#F44336" />
                  <TextBlock AutomationProperties.AutomationId="Help_TxtEnemiesTitle"
                             Text="{loc:Translate Enemies}"
                             FontSize="17" FontWeight="Bold"
                             Foreground="#F44336" />
                </StackPanel>
              </Border>

              <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Ballom -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="EnBallom" AutomationProperties.AutomationId="Help_EnBallom" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate Enemy_Ballom}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource WarningBrush}" />
                      <TextBlock Text="{loc:Translate Enemy_Ballom_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Onil -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="EnOnil" AutomationProperties.AutomationId="Help_EnOnil" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate Enemy_Onil}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource WarningBrush}" />
                      <TextBlock Text="{loc:Translate Enemy_Onil_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Doll -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="EnDoll" AutomationProperties.AutomationId="Help_EnDoll" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate Enemy_Doll}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource WarningBrush}" />
                      <TextBlock Text="{loc:Translate Enemy_Doll_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Minvo -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="EnMinvo" AutomationProperties.AutomationId="Help_EnMinvo" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate Enemy_Minvo}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource ErrorBrush}" />
                      <TextBlock Text="{loc:Translate Enemy_Minvo_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Kondoria -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="EnKondoria" AutomationProperties.AutomationId="Help_EnKondoria" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate Enemy_Kondoria}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource ErrorBrush}" />
                      <TextBlock Text="{loc:Translate Enemy_Kondoria_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Ovapi -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="EnOvapi" AutomationProperties.AutomationId="Help_EnOvapi" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate Enemy_Ovapi}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource ErrorBrush}" />
                      <TextBlock Text="{loc:Translate Enemy_Ovapi_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Pass -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="EnPass" AutomationProperties.AutomationId="Help_EnPass" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate Enemy_Pass}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource ErrorBrush}" />
                      <TextBlock Text="{loc:Translate Enemy_Pass_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
                <!-- Pontan -->
                <Border Classes="CardElevated" Padding="8" CornerRadius="8" MinWidth="200" MaxWidth="280" Margin="4">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <skia:SKCanvasView x:Name="EnPontan" AutomationProperties.AutomationId="Help_EnPontan" Width="48" Height="48" />
                    <StackPanel Spacing="2" VerticalAlignment="Center" MaxWidth="224">
                      <TextBlock Text="{loc:Translate Enemy_Pontan}"
                                 FontSize="13" FontWeight="SemiBold"
                                 Foreground="{DynamicResource ErrorBrush}" />
                      <TextBlock Text="{loc:Translate Enemy_Pontan_Desc}"
                                 FontSize="11" TextWrapping="Wrap"
                                 MaxLines="2" TextTrimming="CharacterEllipsis"
                                 Foreground="{DynamicResource TextMutedBrush}" />
                    </StackPanel>
                  </StackPanel>
                </Border>
              </WrapPanel>
            </StackPanel>
          </Border>

          <!-- Styled Separator -->
          <Border Height="2" CornerRadius="1" Margin="20,4">
            <Border.Background>
              <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="Transparent" Offset="0" />
                <GradientStop Color="#40FF9800" Offset="0.5" />
                <GradientStop Color="Transparent" Offset="1" />
              </LinearGradientBrush>
            </Border.Background>
          </Border>

          <!-- Tips - Orange Akzent -->
          <Border Classes="Card StatsCard"
                  BorderThickness="3,0,0,0" BorderBrush="#FF9800"
                  BoxShadow="0 2 8 0 #25000000"
                  AutomationProperties.AutomationId="Help_TipsSection">
            <StackPanel Spacing="8">
              <Border CornerRadius="6" Padding="8,6" Margin="0,0,0,4">
                <Border.Background>
                  <SolidColorBrush Color="#FF9800" Opacity="0.1" />
                </Border.Background>
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <mi:MaterialIcon Kind="LightbulbOnOutline" Width="22" Height="22"
                                   Foreground="#FF9800" />
                  <TextBlock AutomationProperties.AutomationId="Help_TxtTipsTitle"
                             Text="{loc:Translate Tips}"
                             FontSize="17" FontWeight="Bold"
                             Foreground="#FF9800" />
                </StackPanel>
              </Border>
              <TextBlock AutomationProperties.AutomationId="Help_TxtTipsDesc"
                         Text="{loc:Translate TipsDesc}"
                         FontSize="13" TextWrapping="Wrap"
                         LineHeight="20"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
            </StackPanel>
          </Border>

          <!-- Tutorial wiederholen -->
          <Panel MinHeight="44" HorizontalAlignment="Center" Margin="0,8,0,0">
            <controls:GameButtonCanvas ButtonColor="#2196F3" DamageLevel="0.5" ButtonSeed="170" />
            <Button Classes="Primary GameButton"
                    AutomationProperties.AutomationId="Help_BtnReplayTutorial"
                    Command="{Binding ReplayTutorialCommand}"
                    Background="Transparent" Foreground="White"
                    Padding="24,12">
