<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BomberBlast.ViewModels"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:skia="using:Avalonia.Labs.Controls"
             x:Class="BomberBlast.Views.LuckySpinView"
             x:DataType="vm:LuckySpinViewModel">

  <Panel Background="{DynamicResource BackgroundBrush}"
         AutomationProperties.AutomationId="LuckySpin_Root">
    <Border Background="{DynamicResource SurfaceBrush}" Opacity="0.3" />

    <Grid ColumnDefinitions="*,Auto" Margin="24,16,24,16">

      <!-- Links: Glücksrad (SKCanvasView) -->
      <Panel Grid.Column="0" Margin="0,0,16,0">
        <skia:SKCanvasView x:Name="WheelCanvas"
                           AutomationProperties.AutomationId="LuckySpin_WheelCanvas" />
      </Panel>

      <!-- Rechts: Buttons + Info -->
      <StackPanel Grid.Column="1"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="200"
                  Spacing="12">

        <!-- Titel -->
        <StackPanel Orientation="Horizontal" Spacing="8"
                    HorizontalAlignment="Center">
          <mi:MaterialIcon Kind="ChartDonut" Width="24" Height="24"
                           Foreground="#FFD700" />
          <TextBlock Text="{loc:Translate LuckySpinTitle}"
                     FontSize="20" FontWeight="Bold"
                     Foreground="#FFD700"
                     AutomationProperties.AutomationId="LuckySpin_Title" />
        </StackPanel>

        <!-- Coin-Badge -->
        <Border Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12" Padding="12,8"
                HorizontalAlignment="Center"
                AutomationProperties.AutomationId="LuckySpin_CoinBadge">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <mi:MaterialIcon Kind="CircleMultiple" Width="18" Height="18"
                             Foreground="#FFD700" />
            <TextBlock Text="{Binding CoinsText}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="#FFD700"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Border>

        <!-- Ergebnis-Anzeige -->
        <Border IsVisible="{Binding ShowResult}"
                Background="#33FFD700"
                CornerRadius="12" Padding="12,10"
                HorizontalAlignment="Stretch"
                AutomationProperties.AutomationId="LuckySpin_Result">
          <StackPanel Spacing="4" HorizontalAlignment="Center">
            <mi:MaterialIcon Kind="Star" Width="28" Height="28"
                             Foreground="#FFD700"
                             HorizontalAlignment="Center" />
            <TextBlock Text="{Binding ResultText}"
                       FontSize="16" FontWeight="Bold"
                       Foreground="#FFD700"
                       HorizontalAlignment="Center"
                       TextAlignment="Center" />
          </StackPanel>
        </Border>

        <!-- Spin / Collect Button -->
        <Button Classes="Primary GameButton"
                Command="{Binding SpinWheelCommand}"
                IsVisible="{Binding !ShowResult}"
                IsEnabled="{Binding CanSpin}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Height="52"
                Background="#FFD700"
                AutomationProperties.AutomationId="LuckySpin_BtnSpin">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <mi:MaterialIcon Kind="Play" Width="20" Height="20"
                             Foreground="#1A1A2A"
                             IsVisible="{Binding IsFreeSpinAvailable}" />
            <mi:MaterialIcon Kind="Video" Width="20" Height="20"
                             Foreground="#1A1A2A"
                             IsVisible="{Binding !IsFreeSpinAvailable}" />
            <TextBlock Text="{Binding SpinButtonText}"
                       FontSize="16" FontWeight="Bold"
                       Foreground="#1A1A2A" />
          </StackPanel>
        </Button>

        <!-- Collect Button (nach Spin) -->
        <Button Classes="Primary GameButton"
                Command="{Binding CollectRewardCommand}"
                IsVisible="{Binding ShowResult}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Height="52"
                Background="#22C55E"
                AutomationProperties.AutomationId="LuckySpin_BtnCollect">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <mi:MaterialIcon Kind="CheckCircle" Width="20" Height="20"
                             Foreground="White" />
            <TextBlock Text="{Binding SpinButtonText}"
                       FontSize="16" FontWeight="Bold"
                       Foreground="White" />
          </StackPanel>
        </Button>

        <!-- Total Spins -->
        <TextBlock Text="{Binding TotalSpinsText}"
                   FontSize="11"
                   Foreground="{DynamicResource TextMutedBrush}"
                   HorizontalAlignment="Center"
                   AutomationProperties.AutomationId="LuckySpin_TxtTotal" />

        <!-- Zurück Button -->
        <Button Classes="Secondary GameButton"
                Command="{Binding GoBackCommand}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Height="40"
                AutomationProperties.AutomationId="LuckySpin_BtnBack">
          <StackPanel Orientation="Horizontal" Spacing="6">
            <mi:MaterialIcon Kind="ArrowLeft" Width="16" Height="16"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
            <TextBlock Text="{loc:Translate Back}"
                       FontSize="13"
                       Foreground="{DynamicResource TextSecondaryBrush}" />
          </StackPanel>
        </Button>

      </StackPanel>
    </Grid>
  </Panel>

</UserControl>
