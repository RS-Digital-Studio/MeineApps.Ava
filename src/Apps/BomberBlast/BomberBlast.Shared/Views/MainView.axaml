<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BomberBlast.ViewModels"
             xmlns:views="using:BomberBlast.Views"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:controls="using:MeineApps.UI.Controls"
             x:Class="BomberBlast.Views.MainView"
             x:DataType="vm:MainViewModel">

  <UserControl.Styles>
    <!-- PageView: Default unsichtbar, mit Fade-Transition -->
    <Style Selector="Border.PageView">
      <Setter Property="Opacity" Value="0" />
      <Setter Property="IsHitTestVisible" Value="False" />
      <Setter Property="IsVisible" Value="False" />
      <Setter Property="Transitions">
        <Transitions>
          <DoubleTransition Property="Opacity" Duration="0:0:0.2" Easing="CubicEaseOut" />
        </Transitions>
      </Setter>
    </Style>
    <Style Selector="Border.PageView.Active">
      <Setter Property="Opacity" Value="1" />
      <Setter Property="IsHitTestVisible" Value="True" />
      <Setter Property="IsVisible" Value="True" />
    </Style>
  </UserControl.Styles>

  <Grid AutomationProperties.AutomationId="MainView_Root">
    <!-- Alle Page-Views -->
    <Panel>
      <!-- Main Menu -->
      <Border Classes="PageView" x:Name="MainMenuBorder"
              AutomationProperties.AutomationId="MainView_PageMainMenu">
        <views:MainMenuView DataContext="{Binding MenuVm}" />
      </Border>

      <!-- Game -->
      <Border Classes="PageView" x:Name="GameBorder"
              AutomationProperties.AutomationId="MainView_PageGame">
        <views:GameView DataContext="{Binding GameVm}" />
      </Border>

      <!-- Level Select -->
      <Border Classes="PageView" x:Name="LevelSelectBorder"
              AutomationProperties.AutomationId="MainView_PageLevelSelect">
        <views:LevelSelectView DataContext="{Binding LevelSelectVm}" />
      </Border>

      <!-- Einstellungen + Hilfe (kombiniert mit Tab-Bar) -->
      <Border Classes="PageView" x:Name="SettingsBorder"
              AutomationProperties.AutomationId="MainView_PageSettings">
        <Grid RowDefinitions="Auto,*">
          <Border Grid.Row="0" Background="#CC0D0D1A" Padding="60,4,60,2">
            <Grid ColumnDefinitions="*,*" Height="28">
              <Panel Grid.Column="0">
                <Border IsVisible="{Binding !IsSettingsHelpTab}" Background="{DynamicResource PrimaryBrush}" CornerRadius="6">
                  <TextBlock Text="{loc:Translate Settings}" FontSize="11" FontWeight="SemiBold"
                             Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Button IsVisible="{Binding IsSettingsHelpTab}" Command="{Binding SwitchToSettingsTabCommand}"
                        Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="0" Height="28">
                  <TextBlock Text="{loc:Translate Settings}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
              </Panel>
              <Panel Grid.Column="1">
                <Border IsVisible="{Binding IsSettingsHelpTab}" Background="{DynamicResource PrimaryBrush}" CornerRadius="6">
                  <TextBlock Text="{loc:Translate Help}" FontSize="11" FontWeight="SemiBold"
                             Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Button IsVisible="{Binding !IsSettingsHelpTab}" Command="{Binding SwitchToHelpTabCommand}"
                        Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="0" Height="28">
                  <TextBlock Text="{loc:Translate Help}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
              </Panel>
            </Grid>
          </Border>
          <Panel Grid.Row="1">
            <Border IsVisible="{Binding !IsSettingsHelpTab}">
              <views:SettingsView DataContext="{Binding SettingsVm}" />
            </Border>
            <Border IsVisible="{Binding IsSettingsHelpTab}">
              <views:HelpView DataContext="{Binding HelpVm}" />
            </Border>
          </Panel>
        </Grid>
      </Border>

      <!-- High Scores -->
      <Border Classes="PageView" x:Name="HighScoresBorder"
              AutomationProperties.AutomationId="MainView_PageHighScores">
        <views:HighScoresView DataContext="{Binding HighScoresVm}" />
      </Border>

      <!-- Game Over -->
      <Border Classes="PageView" x:Name="GameOverBorder"
              AutomationProperties.AutomationId="MainView_PageGameOver">
        <views:GameOverView DataContext="{Binding GameOverVm}" />
      </Border>

      <!-- Shop + Glücksrad (kombiniert mit Tab-Bar) -->
      <Border Classes="PageView" x:Name="ShopBorder"
              AutomationProperties.AutomationId="MainView_PageShop">
        <Grid RowDefinitions="Auto,*">
          <Border Grid.Row="0" Background="#CC0D0D1A" Padding="60,4,60,2">
            <Grid ColumnDefinitions="*,*" Height="28">
              <Panel Grid.Column="0">
                <Border IsVisible="{Binding !IsShopSpinTab}" Background="{DynamicResource PrimaryBrush}" CornerRadius="6">
                  <TextBlock Text="{loc:Translate ShopTitle}" FontSize="11" FontWeight="SemiBold"
                             Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Button IsVisible="{Binding IsShopSpinTab}" Command="{Binding SwitchToShopTabCommand}"
                        Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="0" Height="28">
                  <TextBlock Text="{loc:Translate ShopTitle}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
              </Panel>
              <Panel Grid.Column="1">
                <Border IsVisible="{Binding IsShopSpinTab}" Background="{DynamicResource PrimaryBrush}" CornerRadius="6">
                  <TextBlock Text="{loc:Translate LuckySpinTitle}" FontSize="11" FontWeight="SemiBold"
                             Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Button IsVisible="{Binding !IsShopSpinTab}" Command="{Binding SwitchToSpinTabCommand}"
                        Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="0" Height="28">
                  <TextBlock Text="{loc:Translate LuckySpinTitle}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
              </Panel>
            </Grid>
          </Border>
          <Panel Grid.Row="1">
            <Border IsVisible="{Binding !IsShopSpinTab}">
              <views:ShopView DataContext="{Binding ShopVm}" />
            </Border>
            <Border IsVisible="{Binding IsShopSpinTab}">
              <views:LuckySpinView DataContext="{Binding LuckySpinVm}" />
            </Border>
          </Panel>
        </Grid>
      </Border>

      <!-- Profil + Erfolge (kombiniert mit Tab-Bar) -->
      <Border Classes="PageView" x:Name="ProfileBorder"
              AutomationProperties.AutomationId="MainView_PageProfile">
        <Grid RowDefinitions="Auto,*">
          <Border Grid.Row="0" Background="#CC0D0D1A" Padding="60,4,60,2">
            <Grid ColumnDefinitions="*,*" Height="28">
              <Panel Grid.Column="0">
                <Border IsVisible="{Binding !IsProfileAchievementsTab}" Background="{DynamicResource PrimaryBrush}" CornerRadius="6">
                  <TextBlock Text="{loc:Translate ProfileTitle}" FontSize="11" FontWeight="SemiBold"
                             Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Button IsVisible="{Binding IsProfileAchievementsTab}" Command="{Binding SwitchToProfileTabCommand}"
                        Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="0" Height="28">
                  <TextBlock Text="{loc:Translate ProfileTitle}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
              </Panel>
              <Panel Grid.Column="1">
                <Border IsVisible="{Binding IsProfileAchievementsTab}" Background="{DynamicResource PrimaryBrush}" CornerRadius="6">
                  <TextBlock Text="{loc:Translate AchievementsTitle}" FontSize="11" FontWeight="SemiBold"
                             Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Button IsVisible="{Binding !IsProfileAchievementsTab}" Command="{Binding SwitchToAchievementsTabCommand}"
                        Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="0" Height="28">
                  <TextBlock Text="{loc:Translate AchievementsTitle}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
              </Panel>
            </Grid>
          </Border>
          <Panel Grid.Row="1">
            <Border IsVisible="{Binding !IsProfileAchievementsTab}">
              <views:ProfileView DataContext="{Binding ProfileVm}" />
            </Border>
            <Border IsVisible="{Binding IsProfileAchievementsTab}">
              <views:AchievementsView DataContext="{Binding AchievementsVm}" />
            </Border>
          </Panel>
        </Grid>
      </Border>

      <!-- Victory (alle 50 Level geschafft) -->
      <Border Classes="PageView" x:Name="VictoryBorder"
              AutomationProperties.AutomationId="MainView_PageVictory">
        <views:VictoryView DataContext="{Binding VictoryVm}" />
      </Border>

      <!-- Herausforderungen: Daily Challenge + Missionen (kombiniert mit Tab-Bar) -->
      <Border Classes="PageView" x:Name="ChallengesBorder"
              AutomationProperties.AutomationId="MainView_PageChallenges">
        <Grid RowDefinitions="Auto,*">
          <Border Grid.Row="0" Background="#CC0D0D1A" Padding="60,4,60,2">
            <Grid ColumnDefinitions="*,*" Height="28">
              <Panel Grid.Column="0">
                <Border IsVisible="{Binding !IsChallengesMissionsTab}" Background="{DynamicResource PrimaryBrush}" CornerRadius="6">
                  <TextBlock Text="{loc:Translate DailyChallengeTitle}" FontSize="11" FontWeight="SemiBold"
                             Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Button IsVisible="{Binding IsChallengesMissionsTab}" Command="{Binding SwitchToDailyChallengeTabCommand}"
                        Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="0" Height="28">
                  <TextBlock Text="{loc:Translate DailyChallengeTitle}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
              </Panel>
              <Panel Grid.Column="1">
                <Border IsVisible="{Binding IsChallengesMissionsTab}" Background="{DynamicResource PrimaryBrush}" CornerRadius="6">
                  <TextBlock Text="{loc:Translate MissionsButton}" FontSize="11" FontWeight="SemiBold"
                             Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Button IsVisible="{Binding !IsChallengesMissionsTab}" Command="{Binding SwitchToMissionsTabCommand}"
                        Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="0" Height="28">
                  <TextBlock Text="{loc:Translate MissionsButton}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
              </Panel>
            </Grid>
          </Border>
          <Panel Grid.Row="1">
            <Border IsVisible="{Binding !IsChallengesMissionsTab}">
              <views:DailyChallengeView DataContext="{Binding DailyChallengeVm}" />
            </Border>
            <Border IsVisible="{Binding IsChallengesMissionsTab}">
              <views:WeeklyChallengeView DataContext="{Binding WeeklyChallengeVm}" />
            </Border>
          </Panel>
        </Grid>
      </Border>

      <!-- Statistics (Statistiken) -->
      <Border Classes="PageView" x:Name="StatisticsBorder"
              AutomationProperties.AutomationId="MainView_PageStatistics">
        <views:StatisticsView DataContext="{Binding StatisticsVm}" />
      </Border>

      <!-- Quick Play (Zufalls-Level) -->
      <Border Classes="PageView" x:Name="QuickPlayBorder"
              AutomationProperties.AutomationId="MainView_PageQuickPlay">
        <views:QuickPlayView DataContext="{Binding QuickPlayVm}" />
      </Border>

      <!-- Karten: Deck + Sammlung (kombiniert mit Tab-Bar) -->
      <Border Classes="PageView" x:Name="CardsBorder"
              AutomationProperties.AutomationId="MainView_PageCards">
        <Grid RowDefinitions="Auto,*">
          <Border Grid.Row="0" Background="#CC0D0D1A" Padding="60,4,60,2">
            <Grid ColumnDefinitions="*,*" Height="28">
              <Panel Grid.Column="0">
                <Border IsVisible="{Binding !IsCardsCollectionTab}" Background="{DynamicResource PrimaryBrush}" CornerRadius="6">
                  <TextBlock Text="{loc:Translate DeckButton}" FontSize="11" FontWeight="SemiBold"
                             Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Button IsVisible="{Binding IsCardsCollectionTab}" Command="{Binding SwitchToDeckTabCommand}"
                        Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="0" Height="28">
                  <TextBlock Text="{loc:Translate DeckButton}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
              </Panel>
              <Panel Grid.Column="1">
                <Border IsVisible="{Binding IsCardsCollectionTab}" Background="{DynamicResource PrimaryBrush}" CornerRadius="6">
                  <TextBlock Text="{loc:Translate CollectionButton}" FontSize="11" FontWeight="SemiBold"
                             Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Button IsVisible="{Binding !IsCardsCollectionTab}" Command="{Binding SwitchToCollectionTabCommand}"
                        Background="Transparent" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="0" Height="28">
                  <TextBlock Text="{loc:Translate CollectionButton}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
              </Panel>
            </Grid>
          </Border>
          <Panel Grid.Row="1">
            <Border IsVisible="{Binding !IsCardsCollectionTab}">
              <views:DeckView DataContext="{Binding DeckVm}" />
            </Border>
            <Border IsVisible="{Binding IsCardsCollectionTab}">
              <views:CollectionView DataContext="{Binding CollectionVm}" />
            </Border>
          </Panel>
        </Grid>
      </Border>

      <!-- Dungeon Run (Roguelike-Modus) -->
      <Border Classes="PageView" x:Name="DungeonBorder"
              AutomationProperties.AutomationId="MainView_PageDungeon">
        <views:DungeonView DataContext="{Binding DungeonVm}" />
      </Border>

      <!-- Battle Pass -->
      <Border Classes="PageView" x:Name="BattlePassBorder"
              AutomationProperties.AutomationId="MainView_PageBattlePass">
        <views:BattlePassView DataContext="{Binding BattlePassVm}" />
      </Border>

      <!-- Liga -->
      <Border Classes="PageView" x:Name="LeagueBorder"
              AutomationProperties.AutomationId="MainView_PageLeague">
        <views:LeagueView DataContext="{Binding LeagueVm}" />
      </Border>

      <!-- Gem-Shop -->
      <Border Classes="PageView" x:Name="GemShopBorder"
              AutomationProperties.AutomationId="MainView_PageGemShop">
        <views:GemShopView DataContext="{Binding GemShopVm}" />
      </Border>
    </Panel>

    <!-- Kein Ad-Banner in BomberBlast (Landscape-Spiel, nur Rewarded Ads) -->

    <!-- Dialog-Overlays + Game Juice: über beide Rows gespannt -->
    <!-- Alert Dialog Overlay -->
    <Border IsVisible="{Binding IsAlertDialogVisible}"
            AutomationProperties.AutomationId="MainView_AlertOverlay"
            Background="#80000000" ZIndex="100"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <Border Background="{DynamicResource SurfaceBrush}"
              CornerRadius="16" Padding="24" MaxWidth="360"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              BoxShadow="0 8 24 0 #40000000">
        <StackPanel Spacing="16">
          <TextBlock Text="{Binding AlertDialogTitle}"
                     AutomationProperties.AutomationId="MainView_AlertTitle"
                     Classes="TitleMedium"
                     Foreground="{DynamicResource TextPrimaryBrush}" />
          <TextBlock Text="{Binding AlertDialogMessage}"
                     AutomationProperties.AutomationId="MainView_AlertMessage"
                     TextWrapping="Wrap"
                     Foreground="{DynamicResource TextSecondaryBrush}" />
          <Button Classes="Primary" HorizontalAlignment="Right"
                  AutomationProperties.AutomationId="MainView_BtnAlertDismiss"
                  Content="{Binding AlertDialogButtonText}"
                  Command="{Binding DismissAlertCommand}" />
        </StackPanel>
      </Border>
    </Border>

    <!-- Confirm Dialog Overlay -->
    <Border IsVisible="{Binding IsConfirmDialogVisible}"
            AutomationProperties.AutomationId="MainView_ConfirmOverlay"
            Background="#80000000" ZIndex="100"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <Border Background="{DynamicResource SurfaceBrush}"
              CornerRadius="16" Padding="24" MaxWidth="360"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              BoxShadow="0 8 24 0 #40000000">
        <StackPanel Spacing="16">
          <TextBlock Text="{Binding ConfirmDialogTitle}"
                     AutomationProperties.AutomationId="MainView_ConfirmTitle"
                     Classes="TitleMedium"
                     Foreground="{DynamicResource TextPrimaryBrush}" />
          <TextBlock Text="{Binding ConfirmDialogMessage}"
                     AutomationProperties.AutomationId="MainView_ConfirmMessage"
                     TextWrapping="Wrap"
                     Foreground="{DynamicResource TextSecondaryBrush}" />
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Classes="Secondary"
                    AutomationProperties.AutomationId="MainView_BtnConfirmCancel"
                    Content="{Binding ConfirmDialogCancelText}"
                    Command="{Binding CancelConfirmCommand}" />
            <Button Classes="Danger"
                    AutomationProperties.AutomationId="MainView_BtnConfirmAccept"
                    Content="{Binding ConfirmDialogAcceptText}"
                    Command="{Binding AcceptConfirmCommand}" />
          </StackPanel>
        </StackPanel>
      </Border>
    </Border>

    <!-- Game Juice Overlays -->
    <controls:FloatingTextOverlay x:Name="FloatingTextCanvas"
                                   AutomationProperties.AutomationId="MainView_FloatingText"
                                   ZIndex="15"
                                   IsHitTestVisible="False" />
    <controls:SkiaCelebrationOverlay x:Name="CelebrationCanvas"
                                      AutomationProperties.AutomationId="MainView_Celebration"
                                      ZIndex="16"
                                      IsHitTestVisible="False" />
  </Grid>

</UserControl>
