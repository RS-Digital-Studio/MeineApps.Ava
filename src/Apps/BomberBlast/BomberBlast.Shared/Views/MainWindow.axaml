<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:BomberBlast.Views"
        xmlns:splash="using:MeineApps.UI.Controls"
        x:Class="BomberBlast.Views.MainWindow"
        AutomationProperties.AutomationId="MainWindow"
        Title="BomberBlast"
        Icon="avares://BomberBlast.Shared/Assets/icon.png"
        Width="1280" Height="720"
        MinWidth="960" MinHeight="540">

  <Panel>
    <views:MainView AutomationProperties.AutomationId="MainWindow_MainView" />
    <splash:SplashOverlay AutomationProperties.AutomationId="MainWindow_Splash"
                          AppName="BomberBlast"
                          IconSource="avares://BomberBlast.Shared/Assets/icon.png" />
  </Panel>

</Window>
