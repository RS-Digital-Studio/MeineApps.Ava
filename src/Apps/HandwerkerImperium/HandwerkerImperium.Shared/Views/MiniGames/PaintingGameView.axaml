<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HandwerkerImperium.ViewModels"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:skia="using:Avalonia.Labs.Controls"
             xmlns:coreConv="using:MeineApps.Core.Ava.Converters"
             x:Class="HandwerkerImperium.Views.MiniGames.PaintingGameView"
             x:DataType="vm:PaintingGameViewModel">

  <Grid AutomationProperties.AutomationId="Painting_Grid_Root"
        RowDefinitions="Auto,Auto,*,Auto,Auto" Margin="10,20,10,20">

    <!-- ================================================================= -->
    <!-- HEADER                                                            -->
    <!-- ================================================================= -->
    <Border Grid.Row="0"
            AutomationProperties.AutomationId="Painting_Border_Header"
            Classes="CardElevated"
            Padding="16,12">
      <Grid ColumnDefinitions="Auto,*,Auto">
        <!-- Cancel Button -->
        <Button AutomationProperties.AutomationId="Painting_Btn_Cancel"
                Classes="Text"
                Command="{Binding CancelCommand}">
          <mi:MaterialIcon AutomationProperties.AutomationId="Painting_Icon_Close"
                           Kind="Close" Width="24" Height="24" />
        </Button>

        <!-- Titel -->
        <StackPanel Grid.Column="1" HorizontalAlignment="Center"
                    AutomationProperties.AutomationId="Painting_Panel_TitleGroup">
          <StackPanel Orientation="Horizontal"
                      HorizontalAlignment="Center"
                      Spacing="6">
            <mi:MaterialIcon AutomationProperties.AutomationId="Painting_Icon_Title"
                             Kind="FormatPaint" Width="22" Height="22" />
            <TextBlock AutomationProperties.AutomationId="Painting_Txt_Title"
                       Text="{loc:Translate PaintingGame}"
                       FontSize="18" FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
          </StackPanel>
          <TextBlock AutomationProperties.AutomationId="Painting_Txt_DifficultyStars"
                     Text="{Binding DifficultyStars}"
                     HorizontalAlignment="Center"
                     FontSize="12"
                     Foreground="{DynamicResource TextSecondaryBrush}" />
          <TextBlock AutomationProperties.AutomationId="Painting_Txt_TaskProgress"
                     Text="{Binding TaskProgressDisplay}"
                     HorizontalAlignment="Center"
                     FontSize="11" FontWeight="SemiBold"
                     Foreground="{StaticResource CraftPrimaryBrush}"
                     IsVisible="{Binding TaskProgressDisplay, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
        </StackPanel>

        <!-- Timer -->
        <Border Grid.Column="2"
                AutomationProperties.AutomationId="Painting_Border_Timer"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="8"
                Padding="12,6">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon AutomationProperties.AutomationId="Painting_Icon_Clock"
                             Kind="Clock" Width="16" Height="16" />
            <TextBlock AutomationProperties.AutomationId="Painting_Txt_Timer"
                       Text="{Binding TimeRemaining, StringFormat='{}{0}s'}"
                       FontSize="14" FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
          </StackPanel>
        </Border>
      </Grid>
    </Border>

    <!-- ================================================================= -->
    <!-- STATS (Fortschritt, Combo, Fehler)                                -->
    <!-- ================================================================= -->
    <StackPanel Grid.Row="1" Spacing="8" Margin="0,8"
                AutomationProperties.AutomationId="Painting_Panel_Stats">
      <!-- Fortschrittsbalken -->
      <Grid AutomationProperties.AutomationId="Painting_Grid_Progress"
            ColumnDefinitions="Auto,*,Auto"
            IsVisible="{Binding IsPlaying}">
        <mi:MaterialIcon AutomationProperties.AutomationId="Painting_Icon_PaintProgress"
                         Kind="FormatPaint" Width="20" Height="20" />
        <skia:SKCanvasView Grid.Column="1"
                           AutomationProperties.AutomationId="Painting_Canvas_ProgressBar"
                           Height="16"
                           Margin="12,0"
                           PaintSurface="OnPaintPaintProgress" />
        <TextBlock Grid.Column="2" FontSize="12"
                   AutomationProperties.AutomationId="Painting_Txt_PaintProgress"
                   Foreground="{DynamicResource TextSecondaryBrush}"
                   VerticalAlignment="Center">
          <Run Text="{Binding PaintedTargetCount}" />
          <Run Text="/" />
          <Run Text="{Binding TargetCellCount}" />
        </TextBlock>
      </Grid>

      <!-- Fehler + Combo -->
      <Grid AutomationProperties.AutomationId="Painting_Grid_MistakesCombo"
            ColumnDefinitions="*,Auto,*"
            IsVisible="{Binding IsPlaying}">
        <!-- Fehler links -->
        <StackPanel AutomationProperties.AutomationId="Painting_Panel_Mistakes"
                    Orientation="Horizontal" Spacing="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
          <mi:MaterialIcon AutomationProperties.AutomationId="Painting_Icon_Mistakes"
                           Kind="Close" Width="16" Height="16"
                           Foreground="{DynamicResource ErrorBrush}" />
          <TextBlock AutomationProperties.AutomationId="Painting_Txt_MistakeCount"
                     FontSize="12"
                     Foreground="{DynamicResource TextSecondaryBrush}">
            <Run Text="{loc:Translate MistakesLabel}" />
            <Run Text=" " />
            <Run Text="{Binding MistakeCount}" />
          </TextBlock>
        </StackPanel>

        <!-- Combo-Badge mittig -->
        <Border Grid.Column="1"
                x:Name="ComboBadge"
                AutomationProperties.AutomationId="Painting_Border_ComboBadge"
                Background="#E8AA00"
                CornerRadius="12"
                Padding="12,4"
                IsVisible="{Binding IsComboActive}"
                RenderTransformOrigin="0.5,0.5">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon AutomationProperties.AutomationId="Painting_Icon_ComboFire"
                             Kind="Fire" Width="16" Height="16"
                             Foreground="White" />
            <TextBlock AutomationProperties.AutomationId="Painting_Txt_ComboDisplay"
                       Text="{Binding ComboDisplay}"
                       FontSize="14" FontWeight="Bold"
                       Foreground="White" />
          </StackPanel>
        </Border>
      </Grid>
    </StackPanel>

    <!-- ================================================================= -->
    <!-- SKIA GAME AREA (ersetzt XAML-ItemsControl durch SkiaSharp)        -->
    <!-- ================================================================= -->
    <Border Grid.Row="2" AutomationProperties.AutomationId="Painting_Border_GameArea"
            Background="{DynamicResource CardBrush}" CornerRadius="8" Margin="0,4" ClipToBounds="True">
      <Panel>
        <!-- SkiaSharp Canvas fuer Putzwand + Zellen -->
        <skia:SKCanvasView x:Name="PaintCanvas"
                           AutomationProperties.AutomationId="Painting_Canvas_GameArea"
                           MinHeight="200" />

        <!-- Farbvorschau unten ueber dem Canvas -->
        <StackPanel AutomationProperties.AutomationId="Painting_Panel_ColorPreview"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,8"
                    Spacing="8"
                    IsVisible="{Binding !IsResultShown}">
          <TextBlock AutomationProperties.AutomationId="Painting_Txt_ColorLabel"
                     Text="{loc:Translate Color}"
                     FontSize="12"
                     Foreground="{DynamicResource TextSecondaryBrush}"
                     VerticalAlignment="Center" />
          <Border AutomationProperties.AutomationId="Painting_Border_ColorSwatch"
                  Width="24" Height="24"
                  CornerRadius="4"
                  Background="{Binding SelectedColor, Converter={x:Static coreConv:StringToColorBrushConverter.Instance}}" />
        </StackPanel>
      </Panel>
    </Border>

    <!-- ================================================================= -->
    <!-- RESULT DISPLAY                                                    -->
    <!-- ================================================================= -->
    <Border x:Name="ResultBorder" Grid.Row="3"
            AutomationProperties.AutomationId="Painting_Border_Result"
            Classes="Card StatsCard"
            IsVisible="{Binding IsResultShown}"
            Padding="24" Margin="0,8">
      <StackPanel Spacing="16" HorizontalAlignment="Center"
                  AutomationProperties.AutomationId="Painting_Panel_Result">
        <!-- Emoji -->
        <TextBlock AutomationProperties.AutomationId="Painting_Txt_ResultEmoji"
                   Text="{Binding ResultEmoji}"
                   FontSize="48"
                   HorizontalAlignment="Center" />

        <!-- Sterne-Bewertung (staggered via Code-Behind) -->
        <StackPanel AutomationProperties.AutomationId="Painting_Panel_Stars"
                    Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
          <Panel x:Name="Star1Panel">
            <mi:MaterialIcon AutomationProperties.AutomationId="Painting_Icon_Star1"
                             Kind="Star" Width="32" Height="32"
                             Foreground="{StaticResource CraftGoldBrush}"
                             Opacity="{Binding Star1Opacity}" />
          </Panel>
          <Panel x:Name="Star2Panel">
            <mi:MaterialIcon AutomationProperties.AutomationId="Painting_Icon_Star2"
                             Kind="Star" Width="32" Height="32"
                             Foreground="{StaticResource CraftGoldBrush}"
                             Opacity="{Binding Star2Opacity}" />
          </Panel>
          <Panel x:Name="Star3Panel">
            <mi:MaterialIcon AutomationProperties.AutomationId="Painting_Icon_Star3"
                             Kind="Star" Width="32" Height="32"
                             Foreground="{StaticResource CraftGoldBrush}"
                             Opacity="{Binding Star3Opacity}" />
          </Panel>
        </StackPanel>

        <!-- Rating Text (Farbe wird per Code-Behind gesetzt) -->
        <TextBlock x:Name="RatingText"
                   AutomationProperties.AutomationId="Painting_Txt_RatingText"
                   Text="{Binding ResultText}"
                   FontSize="24" FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   HorizontalAlignment="Center" />

        <!-- Belohnungen -->
        <StackPanel AutomationProperties.AutomationId="Painting_Panel_Rewards"
                    Orientation="Horizontal" Spacing="20"
                    HorizontalAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon AutomationProperties.AutomationId="Painting_Icon_RewardMoney"
                             Kind="CashMultiple" Width="20" Height="20"
                             Foreground="{DynamicResource SuccessBrush}" />
            <TextBlock x:Name="RewardMoneyText"
                       AutomationProperties.AutomationId="Painting_Txt_RewardMoney"
                       Text="{Binding RewardAmount, StringFormat='+{0:N0} &#x20AC;'}"
                       FontSize="14" FontWeight="Bold"
                       Foreground="{DynamicResource SuccessBrush}"
                       VerticalAlignment="Center" />
          </StackPanel>

          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon AutomationProperties.AutomationId="Painting_Icon_RewardXp"
                             Kind="Star" Width="20" Height="20"
                             Foreground="{StaticResource CraftGoldBrush}" />
            <TextBlock x:Name="RewardXpText"
                       AutomationProperties.AutomationId="Painting_Txt_RewardXp"
                       Text="{Binding XpAmount, StringFormat='+{0} XP'}"
                       FontSize="14" FontWeight="Bold"
                       Foreground="{StaticResource CraftGoldBrush}"
                       VerticalAlignment="Center" />
          </StackPanel>
        </StackPanel>
      </StackPanel>
    </Border>

    <!-- Countdown Overlay (3, 2, 1, Los!) -->
    <Border AutomationProperties.AutomationId="Painting_Border_Countdown"
            Grid.RowSpan="5" Background="#CC000000"
            IsVisible="{Binding IsCountdownActive}">
      <TextBlock AutomationProperties.AutomationId="Painting_Txt_Countdown"
                 Text="{Binding CountdownText}"
                 FontSize="72" FontWeight="Bold"
                 Foreground="{StaticResource CraftGoldBrush}"
                 HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Border>

    <!-- Tutorial Overlay (beim ersten Spielstart) -->
    <Border AutomationProperties.AutomationId="Painting_Border_TutorialOverlay"
            Grid.RowSpan="5" Background="#DD000000"
            IsVisible="{Binding ShowTutorial}">
      <Border AutomationProperties.AutomationId="Painting_Border_TutorialCard"
              Background="{DynamicResource CardBrush}"
              CornerRadius="16"
              Padding="24"
              Margin="32"
              MaxWidth="400"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
        <StackPanel Spacing="16">
          <TextBlock AutomationProperties.AutomationId="Painting_Txt_TutorialTitle"
                     Text="{Binding TutorialTitle}"
                     FontSize="22" FontWeight="Bold"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     HorizontalAlignment="Center" />
          <TextBlock AutomationProperties.AutomationId="Painting_Txt_TutorialText"
                     Text="{Binding TutorialText}"
                     FontSize="14"
                     Foreground="{DynamicResource TextSecondaryBrush}"
                     TextWrapping="Wrap"
                     TextAlignment="Center"
                     LineHeight="22" />
          <Button AutomationProperties.AutomationId="Painting_Btn_TutorialDismiss"
                  Content="{loc:Translate TutorialGotIt}"
                  Classes="Primary"
                  Command="{Binding DismissTutorialCommand}"
                  HorizontalAlignment="Center"
                  MinWidth="160"
                  Margin="0,8,0,0" />
        </StackPanel>
      </Border>
    </Border>

    <!-- ================================================================= -->
    <!-- ACTION BUTTONS                                                    -->
    <!-- ================================================================= -->
    <StackPanel AutomationProperties.AutomationId="Painting_Panel_Actions"
                Grid.Row="4" Spacing="16">

      <!-- Start Button (versteckt waehrend Spiel und nach Ergebnis) -->
      <Panel IsVisible="{Binding !IsResultShown}">
        <Button AutomationProperties.AutomationId="Painting_Btn_Start"
                Content="{loc:Translate StartPainting}"
                Classes="Primary"
                Command="{Binding StartGameCommand}"
                IsVisible="{Binding !IsPlaying}"
                HorizontalAlignment="Center"
                MinWidth="220" />
      </Panel>

      <!-- Letzte Aufgabe: Ad + Weiter -->
      <Grid AutomationProperties.AutomationId="Painting_Grid_LastTaskActions"
            ColumnDefinitions="*,*"
            ColumnSpacing="12">
        <Grid.IsVisible>
          <MultiBinding Converter="{x:Static BoolConverters.And}">
            <Binding Path="IsResultShown" />
            <Binding Path="IsLastTask" />
          </MultiBinding>
        </Grid.IsVisible>

        <Button AutomationProperties.AutomationId="Painting_Btn_WatchAd"
                Classes="Secondary"
                IsEnabled="{Binding CanWatchAd}"
                Command="{Binding WatchAdCommand}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <TextBlock AutomationProperties.AutomationId="Painting_Txt_WatchAd"
                     Text="{loc:Translate WatchAdForDouble}"
                     TextTrimming="CharacterEllipsis" />
        </Button>

        <Button Grid.Column="1"
                AutomationProperties.AutomationId="Painting_Btn_Continue"
                Classes="Primary"
                Command="{Binding ContinueCommand}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <TextBlock Text="{Binding ContinueButtonText}"
                     TextTrimming="CharacterEllipsis" />
        </Button>
      </Grid>

      <!-- Zwischen-Aufgabe: Nur Weiter-Button -->
      <Button AutomationProperties.AutomationId="Painting_Btn_NextTask"
              Classes="Primary"
              Command="{Binding ContinueCommand}"
              HorizontalAlignment="Center"
              MinWidth="200">
        <Button.IsVisible>
          <MultiBinding Converter="{x:Static BoolConverters.And}">
            <Binding Path="IsResultShown" />
            <Binding Path="!IsLastTask" />
          </MultiBinding>
        </Button.IsVisible>
        <TextBlock Text="{Binding ContinueButtonText}"
                   TextTrimming="CharacterEllipsis"
                   MaxWidth="200" />
      </Button>

    </StackPanel>

  </Grid>

</UserControl>
