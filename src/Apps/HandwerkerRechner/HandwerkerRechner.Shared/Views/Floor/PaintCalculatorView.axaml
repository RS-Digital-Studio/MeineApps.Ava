<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HandwerkerRechner.ViewModels.Floor"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:skia="using:Avalonia.Labs.Controls"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:behaviors="using:MeineApps.UI.Behaviors"
             x:Class="HandwerkerRechner.Views.Floor.PaintCalculatorView"
             x:DataType="vm:PaintCalculatorViewModel">

  <Grid AutomationProperties.AutomationId="Paint_RootGrid" RowDefinitions="Auto,*,Auto">

    <!-- ============================================ -->
    <!-- Row 0: Header with Back Button + Title       -->
    <!-- ============================================ -->
    <Border AutomationProperties.AutomationId="Paint_Header" Grid.Row="0"
            Background="{DynamicResource WarningBrush}"
            Padding="16,12,16,20"
            CornerRadius="0,0,24,24">
      <Grid ColumnDefinitions="Auto,*">
        <Button AutomationProperties.AutomationId="Paint_BtnBack" Command="{Binding GoBackCommand}"
                Background="#33FFFFFF"
                CornerRadius="20"
                Width="40" Height="40"
                Padding="0">
          <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White" />
        </Button>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                    Margin="12,0,0,0" VerticalAlignment="Center">
          <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40">
            <mi:MaterialIcon Kind="FormatPaint" Width="22" Height="22"
                             Foreground="White"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <TextBlock AutomationProperties.AutomationId="Paint_TxtTitle" Text="{loc:Translate CalcPaint}"
                     FontSize="20" FontWeight="Bold" Foreground="White"
                     VerticalAlignment="Center" />
        </StackPanel>
      </Grid>
    </Border>

    <!-- ============================================ -->
    <!-- Row 1: Scrollable Content                    -->
    <!-- ============================================ -->
    <ScrollViewer AutomationProperties.AutomationId="Paint_ScrollContent" Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <StackPanel Spacing="16" Margin="16,16,16,200">

        <!-- Input Section: Area & Coverage -->
        <Border AutomationProperties.AutomationId="Paint_CardArea" Classes="Card StatsCard">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate Area}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />

            <!-- Area -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate TotalArea}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Paint_TxtBoxArea" Text="{Binding Area}"
                       Watermark="m&#x00B2;"
                       Classes="Outlined" />
            </StackPanel>

            <!-- Coverage Per Liter -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate Coverage}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Paint_TxtBoxCoverage" Text="{Binding CoveragePerLiter}"
                       Watermark="m&#x00B2;/L"
                       Classes="Outlined" />
            </StackPanel>

            <!-- Number of Coats -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate Coats}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Paint_TxtBoxCoats" Text="{Binding NumberOfCoats}"
                       Watermark="1-3"
                       Classes="Outlined" />
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Abz체ge (T체ren + Fenster) -->
        <Border AutomationProperties.AutomationId="Paint_CardDeductions" Classes="Card StatsCard">
          <StackPanel Spacing="12">
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Text="{loc:Translate DeductionsOptional}"
                         FontSize="16" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         VerticalAlignment="Center" />
              <ToggleSwitch IsChecked="{Binding ShowDeductions}"
                            OnContent="" OffContent=""
                            Grid.Column="1" />
            </Grid>

            <StackPanel Spacing="12" IsVisible="{Binding ShowDeductions}">
              <!-- T체ren -->
              <TextBlock Text="{loc:Translate Doors}"
                         FontSize="14" FontWeight="Medium"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <Grid ColumnDefinitions="*,8,*,8,*">
                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate DoorCount}" FontSize="12"
                             Foreground="{DynamicResource TextMutedBrush}" />
                  <TextBox AutomationProperties.AutomationId="Paint_TxtBoxDoorCount"
                           Text="{Binding DoorCount}" Classes="Outlined" />
                </StackPanel>
                <StackPanel Grid.Column="2" Spacing="4">
                  <TextBlock Text="{loc:Translate DoorWidth}" FontSize="12"
                             Foreground="{DynamicResource TextMutedBrush}" />
                  <TextBox AutomationProperties.AutomationId="Paint_TxtBoxDoorWidth"
                           Text="{Binding DoorWidth}" Watermark="m" Classes="Outlined" />
                </StackPanel>
                <StackPanel Grid.Column="4" Spacing="4">
                  <TextBlock Text="{loc:Translate DoorHeight}" FontSize="12"
                             Foreground="{DynamicResource TextMutedBrush}" />
                  <TextBox AutomationProperties.AutomationId="Paint_TxtBoxDoorHeight"
                           Text="{Binding DoorHeight}" Watermark="m" Classes="Outlined" />
                </StackPanel>
              </Grid>

              <!-- Fenster -->
              <TextBlock Text="{loc:Translate Windows}"
                         FontSize="14" FontWeight="Medium"
                         Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,8,0,0" />
              <Grid ColumnDefinitions="*,8,*,8,*">
                <StackPanel Spacing="4">
                  <TextBlock Text="{loc:Translate WindowCount}" FontSize="12"
                             Foreground="{DynamicResource TextMutedBrush}" />
                  <TextBox AutomationProperties.AutomationId="Paint_TxtBoxWindowCount"
                           Text="{Binding WindowCount}" Classes="Outlined" />
                </StackPanel>
                <StackPanel Grid.Column="2" Spacing="4">
                  <TextBlock Text="{loc:Translate WindowWidth}" FontSize="12"
                             Foreground="{DynamicResource TextMutedBrush}" />
                  <TextBox AutomationProperties.AutomationId="Paint_TxtBoxWindowWidth"
                           Text="{Binding WindowWidth}" Watermark="m" Classes="Outlined" />
                </StackPanel>
                <StackPanel Grid.Column="4" Spacing="4">
                  <TextBlock Text="{loc:Translate WindowHeight}" FontSize="12"
                             Foreground="{DynamicResource TextMutedBrush}" />
                  <TextBox AutomationProperties.AutomationId="Paint_TxtBoxWindowHeight"
                           Text="{Binding WindowHeight}" Watermark="m" Classes="Outlined" />
                </StackPanel>
              </Grid>

              <!-- Abzugsfl채che anzeigen -->
              <Grid ColumnDefinitions="*,Auto" IsVisible="{Binding DeductedAreaDisplay, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                <TextBlock Text="{loc:Translate DeductedArea}" FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}" />
                <TextBlock Grid.Column="1" Text="{Binding DeductedAreaDisplay}" FontSize="13"
                           FontWeight="SemiBold" Foreground="{DynamicResource ErrorBrush}" />
              </Grid>
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Input Section: Pricing -->
        <Border AutomationProperties.AutomationId="Paint_CardCost" Classes="Card StatsCard">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate CostCalculation}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />

            <!-- Price Per Liter (optional) -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate PricePerLiter}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox AutomationProperties.AutomationId="Paint_TxtBoxPrice" Text="{Binding PricePerLiter}"
                       Watermark="EUR"
                       Classes="Outlined" />
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Visualisierung -->
        <Border AutomationProperties.AutomationId="Paint_CardVisualization" Classes="Card" Padding="0" Height="220" Margin="0,0,0,0"
                IsVisible="{Binding HasResult}" ClipToBounds="True" CornerRadius="12">
          <skia:SKCanvasView AutomationProperties.AutomationId="Paint_Canvas" x:Name="PaintCanvas" PaintSurface="OnPaintVisualization" />
        </Border>

        <!-- Results Section -->
        <Border AutomationProperties.AutomationId="Paint_CardResult" Classes="Card Elevated StatsCard"
                IsVisible="{Binding HasResult}">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate Result}"
                       FontSize="16" FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryBrush}" />

            <!-- Hero-Value: Liter Farbe -->
            <Border Background="{DynamicResource AccentBrush}" CornerRadius="12" Padding="16,12"
                    Margin="0,4,0,8">
              <StackPanel>
                <TextBlock Text="{loc:Translate LitersNeeded}" FontSize="12"
                           Foreground="#CCFFFFFF" />
                <TextBlock AutomationProperties.AutomationId="Paint_TxtLitersNeeded"
                           Text="{Binding LitersNeededDisplay}" FontSize="28" FontWeight="Bold"
                           Foreground="White">
                  <i:Interaction.Behaviors>
                    <behaviors:CountUpBehavior TargetValue="{Binding Result.LitersNeeded}" Format="F1" Suffix=" L" Duration="500" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </StackPanel>
            </Border>

            <!-- Total Area -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0"
                         Text="{loc:Translate TotalArea}"
                         FontSize="14"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock AutomationProperties.AutomationId="Paint_TxtTotalArea" Grid.Column="1"
                         Text="{Binding TotalAreaDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}" />
            </Grid>

            <!-- Total Cost (only when ShowCost) -->
            <Grid ColumnDefinitions="*,Auto"
                  IsVisible="{Binding ShowCost}">
              <TextBlock Grid.Column="0"
                         Text="{loc:Translate TotalCost}"
                         FontSize="14"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock AutomationProperties.AutomationId="Paint_TxtTotalCost" Grid.Column="1"
                         Text="{Binding TotalCostDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource PrimaryBrush}" />
            </Grid>
            <!-- Aktions-Buttons: Share + PDF Export -->
            <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
              <Button AutomationProperties.AutomationId="Paint_BtnShare" Grid.Column="0"
                      Command="{Binding ShareResultCommand}"
                      Classes="Outlined"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="4">
                  <mi:MaterialIcon Kind="ContentCopy" Width="16" Height="16"
                                   Foreground="{DynamicResource AccentBrush}" />
                  <TextBlock Text="{loc:Translate ShareResult}"
                             FontSize="12" TextTrimming="CharacterEllipsis"
                             VerticalAlignment="Center" />
                </StackPanel>
              </Button>
              <Button AutomationProperties.AutomationId="Paint_BtnExport" Grid.Column="2"
                      Command="{Binding ExportMaterialListCommand}"
                      Classes="Outlined"
                      IsEnabled="{Binding !IsExporting}"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="4">
                  <mi:MaterialIcon Kind="FilePdfBox" Width="16" Height="16"
                                   Foreground="{DynamicResource AccentBrush}" />
                  <TextBlock Text="{loc:Translate ExportMaterialList}"
                             FontSize="12" TextTrimming="CharacterEllipsis"
                             VerticalAlignment="Center" />
                </StackPanel>
              </Button>
            </Grid>
          </StackPanel>
        </Border>

      </StackPanel>
    </ScrollViewer>

    <!-- ============================================ -->
    <!-- Row 2: Action Buttons                        -->
    <!-- ============================================ -->
    <Border AutomationProperties.AutomationId="Paint_ActionBar" Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}">
      <Grid ColumnDefinitions="*,8,*,8,*">
        <!-- Reset -->
        <Button AutomationProperties.AutomationId="Paint_BtnReset" Grid.Column="0"
                Classes="Outlined"
                Command="{Binding ResetCommand}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="Refresh" Width="16" Height="16"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
            <TextBlock Text="{loc:Translate Reset}"
                       FontSize="12" TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>

        <!-- Calculate -->
        <Button AutomationProperties.AutomationId="Paint_BtnCalculate" Grid.Column="2"
                Classes="Primary"
                Command="{Binding CalculateCommand}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="Calculator" Width="16" Height="16" />
            <TextBlock Text="{loc:Translate Calculate}"
                       FontSize="12" TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>

        <!-- Save Project -->
        <Button AutomationProperties.AutomationId="Paint_BtnSave" Grid.Column="4"
                Classes="Secondary"
                Command="{Binding SaveProjectCommand}"
                IsVisible="{Binding HasResult}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="ContentSave" Width="16" Height="16" />
            <TextBlock Text="{loc:Translate Save}"
                       FontSize="12" TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
      </Grid>
    </Border>

    <!-- Save Project Dialog Overlay -->
    <Border AutomationProperties.AutomationId="Paint_SaveOverlay" Grid.Row="0" Grid.RowSpan="3"
            ZIndex="100"
            Background="#80000000"
            IsVisible="{Binding ShowSaveDialog}">
      <Border Background="{DynamicResource SurfaceBrush}"
              CornerRadius="16"
              Padding="24"
              MaxWidth="340"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
        <StackPanel Spacing="16">
          <TextBlock Text="{loc:Translate SaveProject}"
                     FontSize="18" FontWeight="Bold"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     HorizontalAlignment="Center" />
          <TextBox AutomationProperties.AutomationId="Paint_TxtBoxProjectName" Text="{Binding SaveProjectName}"
                   Watermark="{loc:Translate ProjectName}"
                   Classes="Outlined" />
          <Grid ColumnDefinitions="*,12,*">
            <Button AutomationProperties.AutomationId="Paint_BtnCancelSave" Grid.Column="0"
                    Classes="Outlined"
                    Command="{Binding CancelSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Cancel}" />
            <Button AutomationProperties.AutomationId="Paint_BtnConfirmSave" Grid.Column="2"
                    Classes="Primary"
                    Command="{Binding ConfirmSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Save}" />
          </Grid>
        </StackPanel>
      </Border>
    </Border>

  </Grid>

</UserControl>
