<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HandwerkerRechner.ViewModels.Premium"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:loc="using:MeineApps.Core.Ava.Localization"
             xmlns:skia="using:Avalonia.Labs.Controls"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:behaviors="using:MeineApps.UI.Behaviors"
             x:Class="HandwerkerRechner.Views.Premium.CableSizingView"
             x:DataType="vm:CableSizingViewModel">

  <Grid RowDefinitions="Auto,*,Auto"
        AutomationProperties.AutomationId="CableSizing_RootGrid">

    <!-- Header: Amber Gradient -->
    <Border Grid.Row="0"
            Padding="16,12,16,20"
            CornerRadius="0,0,24,24"
            AutomationProperties.AutomationId="CableSizing_HeaderBorder">
      <Border.Background>
        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
          <GradientStop Color="#F59E0B" Offset="0" />
          <GradientStop Color="#D97706" Offset="1" />
        </LinearGradientBrush>
      </Border.Background>
      <Grid ColumnDefinitions="Auto,*">
        <Button Command="{Binding GoBackCommand}"
                Background="#33FFFFFF"
                CornerRadius="20"
                Width="40" Height="40"
                Padding="0"
                AutomationProperties.AutomationId="CableSizing_BtnBack">
          <mi:MaterialIcon Kind="ArrowLeft" Width="22" Height="22" Foreground="White" />
        </Button>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12"
                    Margin="12,0,0,0" VerticalAlignment="Center">
          <Border Background="#33FFFFFF" CornerRadius="12" Width="40" Height="40">
            <mi:MaterialIcon Kind="CableData" Width="22" Height="22"
                             Foreground="White"
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <TextBlock Text="{loc:Translate CalcCableSizing}"
                     FontSize="20" FontWeight="Bold" Foreground="White"
                     VerticalAlignment="Center"
                     AutomationProperties.AutomationId="CableSizing_TxtTitle" />
        </StackPanel>
      </Grid>
    </Border>

    <!-- Content -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                  AutomationProperties.AutomationId="CableSizing_ScrollViewer">
      <StackPanel Spacing="16" Margin="16,16,16,200">

        <!-- Input Card -->
        <Border Classes="Card StatsCard"
                AutomationProperties.AutomationId="CableSizing_CardInput">
          <StackPanel Spacing="12">
            <TextBlock Text="{loc:Translate CableCurrent}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       AutomationProperties.AutomationId="CableSizing_TxtInputHeader" />

            <!-- Strom (A) -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate CableCurrent}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox Text="{Binding CurrentAmps}"
                       Watermark="A"
                       AutomationProperties.AutomationId="CableSizing_TxtBoxCurrentAmps" />
            </StackPanel>

            <!-- KabellÃ¤nge (m) -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate CableLength}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox Text="{Binding CableLength}"
                       Watermark="m"
                       AutomationProperties.AutomationId="CableSizing_TxtBoxCableLength" />
            </StackPanel>

            <!-- Spannung (ComboBox) -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate CableVoltage}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <ComboBox SelectedIndex="{Binding SelectedVoltage}"
                        HorizontalAlignment="Stretch"
                        AutomationProperties.AutomationId="CableSizing_CbVoltage">
                <ComboBoxItem Content="{loc:Translate CableVoltage230}" />
                <ComboBoxItem Content="{loc:Translate CableVoltage400}" />
              </ComboBox>
            </StackPanel>

            <!-- Leitermaterial (ComboBox) -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate CableMaterial}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <ComboBox SelectedIndex="{Binding SelectedMaterial}"
                        HorizontalAlignment="Stretch"
                        AutomationProperties.AutomationId="CableSizing_CbMaterial">
                <ComboBoxItem Content="{loc:Translate CableMaterialCopper}" />
                <ComboBoxItem Content="{loc:Translate CableMaterialAluminum}" />
              </ComboBox>
            </StackPanel>

            <!-- Max. Spannungsabfall (%) -->
            <StackPanel Spacing="4">
              <TextBlock Text="{loc:Translate MaxVoltageDrop}"
                         FontSize="13"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBox Text="{Binding MaxDropPercent}"
                       Watermark="%"
                       AutomationProperties.AutomationId="CableSizing_TxtBoxMaxDrop" />
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Visualisierung -->
        <Border Classes="Card" Padding="0" Height="220" Margin="0,0,0,0"
                IsVisible="{Binding HasResult}" ClipToBounds="True" CornerRadius="12"
                AutomationProperties.AutomationId="CableSizing_CardVisualization">
          <skia:SKCanvasView x:Name="CableSizingCanvas" PaintSurface="OnPaintVisualization"
                             AutomationProperties.AutomationId="CableSizing_Canvas" />
        </Border>

        <!-- Results Card -->
        <Border Classes="Card Elevated StatsCard"
                IsVisible="{Binding HasResult}"
                AutomationProperties.AutomationId="CableSizing_CardResult">
          <StackPanel Spacing="10">
            <TextBlock Text="{loc:Translate Result}"
                       FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryBrush}"
                       AutomationProperties.AutomationId="CableSizing_TxtResultHeader" />

            <!-- Hero-Value: Empfohlener Querschnitt -->
            <Border CornerRadius="12" Padding="16,12"
                    Margin="0,4,0,8">
              <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                  <GradientStop Color="#F59E0B" Offset="0" />
                  <GradientStop Color="#D97706" Offset="1" />
                </LinearGradientBrush>
              </Border.Background>
              <StackPanel>
                <TextBlock Text="{loc:Translate RecommendedCrossSection}" FontSize="12"
                           Foreground="#CCFFFFFF" />
                <TextBlock AutomationProperties.AutomationId="CableSizing_TxtRecommended"
                           Text="{Binding RecommendedSizeDisplay}" FontSize="28" FontWeight="Bold"
                           Foreground="White">
                  <i:Interaction.Behaviors>
                    <behaviors:CountUpBehavior TargetValue="{Binding Result.RecommendedCrossSection}" Format="F1" Suffix=" mm&#178;" Duration="500" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </StackPanel>
            </Border>

            <!-- Mindest-Querschnitt -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0" Text="{loc:Translate MinCrossSection}"
                         FontSize="14"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock Grid.Column="1" Text="{Binding MinSizeDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         AutomationProperties.AutomationId="CableSizing_TxtMinSize" />
            </Grid>

            <!-- Spannungsabfall -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0" Text="{loc:Translate VoltageDrop}"
                         FontSize="14"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock Grid.Column="1" Text="{Binding DropDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         AutomationProperties.AutomationId="CableSizing_TxtDrop" />
            </Grid>

            <!-- VDE-Status (farblich) -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0" Text="VDE"
                         FontSize="14"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock Grid.Column="1" Text="{Binding VdeStatusDisplay}"
                         FontSize="14" FontWeight="Bold"
                         Foreground="{DynamicResource PrimaryBrush}"
                         AutomationProperties.AutomationId="CableSizing_TxtVde" />
            </Grid>

            <!-- Leitermaterial -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0" Text="{loc:Translate CableMaterial}"
                         FontSize="14"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock Grid.Column="1" Text="{Binding MaterialDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         AutomationProperties.AutomationId="CableSizing_TxtMaterial" />
            </Grid>

            <!-- Spannung -->
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0" Text="{loc:Translate CableVoltage}"
                         FontSize="14"
                         Foreground="{DynamicResource TextSecondaryBrush}" />
              <TextBlock Grid.Column="1" Text="{Binding VoltageDisplay}"
                         FontSize="14" FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         AutomationProperties.AutomationId="CableSizing_TxtVoltage" />
            </Grid>

            <!-- Aktions-Buttons: Share + PDF Export -->
            <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
              <Button Grid.Column="0"
                      Command="{Binding ShareResultCommand}"
                      Classes="Outlined"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      AutomationProperties.AutomationId="CableSizing_BtnShare">
                <StackPanel Orientation="Horizontal" Spacing="4">
                  <mi:MaterialIcon Kind="ContentCopy" Width="16" Height="16"
                                   Foreground="{DynamicResource AccentBrush}" />
                  <TextBlock Text="{loc:Translate ShareResult}"
                             FontSize="12" TextTrimming="CharacterEllipsis"
                             VerticalAlignment="Center" />
                </StackPanel>
              </Button>
              <Button Grid.Column="2"
                      Command="{Binding ExportMaterialListCommand}"
                      Classes="Outlined"
                      IsEnabled="{Binding !IsExporting}"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      AutomationProperties.AutomationId="CableSizing_BtnExport">
                <StackPanel Orientation="Horizontal" Spacing="4">
                  <mi:MaterialIcon Kind="FilePdfBox" Width="16" Height="16"
                                   Foreground="{DynamicResource AccentBrush}" />
                  <TextBlock Text="{loc:Translate ExportMaterialList}"
                             FontSize="12" TextTrimming="CharacterEllipsis"
                             VerticalAlignment="Center" />
                </StackPanel>
              </Button>
            </Grid>
          </StackPanel>
        </Border>

      </StackPanel>
    </ScrollViewer>

    <!-- Buttons -->
    <Border Grid.Row="2" Padding="16,12" Background="{DynamicResource BackgroundBrush}"
            AutomationProperties.AutomationId="CableSizing_BottomBar">
      <Grid ColumnDefinitions="*,8,*,8,*">
        <Button Grid.Column="0"
                Command="{Binding ResetCommand}"
                Classes="Outlined"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                AutomationProperties.AutomationId="CableSizing_BtnReset">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="Refresh" Width="16" Height="16"
                             Foreground="{DynamicResource TextSecondaryBrush}" />
            <TextBlock Text="{loc:Translate Reset}"
                       FontSize="12" TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
        <Button Grid.Column="2"
                Command="{Binding CalculateCommand}"
                Classes="Primary"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                AutomationProperties.AutomationId="CableSizing_BtnCalculate">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="Calculator" Width="16" Height="16" />
            <TextBlock Text="{loc:Translate Calculate}"
                       FontSize="12" TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
        <Button Grid.Column="4"
                Classes="Secondary"
                Command="{Binding SaveProjectCommand}"
                IsVisible="{Binding HasResult}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                AutomationProperties.AutomationId="CableSizing_BtnSave">
          <StackPanel Orientation="Horizontal" Spacing="4">
            <mi:MaterialIcon Kind="ContentSave" Width="16" Height="16" />
            <TextBlock Text="{loc:Translate Save}"
                       FontSize="12" TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center" />
          </StackPanel>
        </Button>
      </Grid>
    </Border>

    <!-- Save Project Dialog Overlay -->
    <Border Grid.Row="0" Grid.RowSpan="3"
            ZIndex="100"
            Background="#80000000"
            IsVisible="{Binding ShowSaveDialog}"
            AutomationProperties.AutomationId="CableSizing_SaveDialogOverlay">
      <Border Background="{DynamicResource SurfaceBrush}"
              CornerRadius="16"
              Padding="24"
              MaxWidth="340"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              AutomationProperties.AutomationId="CableSizing_SaveDialogCard">
        <StackPanel Spacing="16">
          <TextBlock Text="{loc:Translate SaveProject}"
                     FontSize="18" FontWeight="Bold"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     HorizontalAlignment="Center"
                     AutomationProperties.AutomationId="CableSizing_TxtSaveDialogTitle" />
          <TextBox Text="{Binding SaveProjectName}"
                   Watermark="{loc:Translate ProjectName}"
                   Classes="Outlined"
                   AutomationProperties.AutomationId="CableSizing_TxtBoxProjectName" />
          <Grid ColumnDefinitions="*,12,*">
            <Button Grid.Column="0"
                    Classes="Outlined"
                    Command="{Binding CancelSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Cancel}"
                    AutomationProperties.AutomationId="CableSizing_BtnCancelSave" />
            <Button Grid.Column="2"
                    Classes="Primary"
                    Command="{Binding ConfirmSaveProjectCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{loc:Translate Save}"
                    AutomationProperties.AutomationId="CableSizing_BtnConfirmSave" />
          </Grid>
        </StackPanel>
      </Border>
    </Border>

  </Grid>

</UserControl>
