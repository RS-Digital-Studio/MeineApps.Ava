<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:labs="using:Avalonia.Labs.Controls"
             x:Class="MeineApps.UI.Controls.SkiaLoadingSplash"
             IsHitTestVisible="True">

  <UserControl.Transitions>
    <Transitions>
      <DoubleTransition Property="Opacity" Duration="0:0:0.3" Easing="CubicEaseOut" />
    </Transitions>
  </UserControl.Transitions>

  <!-- Vollbild SKCanvasView - SplashScreenRenderer zeichnet alles -->
  <labs:SKCanvasView x:Name="SplashCanvas" />
</UserControl>
