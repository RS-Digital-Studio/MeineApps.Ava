<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- MODERN CARD STYLES                                                      -->
  <!-- Gemeinsame Styles für alle Apps: Cards, Animations, Section-Headers     -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <!-- StatsCard: Hover-Lift-Effekt für Statistik/Dashboard-Cards -->
  <Style Selector="Border.StatsCard">
    <Setter Property="Background" Value="{DynamicResource CardBrush}" />
    <Setter Property="CornerRadius" Value="16" />
    <Setter Property="Padding" Value="16" />
    <Setter Property="Margin" Value="0,0,0,12" />
    <Setter Property="Transitions">
      <Transitions>
        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
      </Transitions>
    </Setter>
  </Style>
  <Style Selector="Border.StatsCard:pointerover">
    <Setter Property="RenderTransform" Value="translateY(-2px)" />
  </Style>

  <!-- SettingsCard: Subtiler Hover für Einstellungs-Sections -->
  <Style Selector="Border.SettingsCard">
    <Setter Property="Background" Value="{DynamicResource CardBrush}" />
    <Setter Property="CornerRadius" Value="16" />
    <Setter Property="Padding" Value="16" />
    <Setter Property="Margin" Value="0,0,0,12" />
    <Setter Property="Transitions">
      <Transitions>
        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
      </Transitions>
    </Setter>
  </Style>
  <Style Selector="Border.SettingsCard:pointerover">
    <Setter Property="RenderTransform" Value="translateY(-1px)" />
  </Style>

  <!-- Pulse-Animation für Empty-State-Icons -->
  <Style Selector="Border.EmptyPulse">
    <Style.Animations>
      <Animation Duration="0:0:2" IterationCount="INFINITE" PlaybackDirection="Alternate" Easing="CubicEaseInOut">
        <KeyFrame Cue="0%"><Setter Property="Opacity" Value="1" /></KeyFrame>
        <KeyFrame Cue="100%"><Setter Property="Opacity" Value="0.5" /></KeyFrame>
      </Animation>
    </Style.Animations>
  </Style>

  <!-- Section-Titel für Chart/Stats-Bereiche -->
  <Style Selector="TextBlock.SectionTitle">
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
  </Style>

</Styles>
